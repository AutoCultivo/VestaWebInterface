{
  "name": "vesta-web-interface",
  "homepage": "https://github.com/cdgco/VestaWebInterface",
  "authors": [
    "Carter Roeser <carter@cdgtech.one>"
  ],
  "description": "PHP interface for VestaCP, providing a beautiful UI, UX, features & integrations.",
  "main": "package.js",
  "keywords": [
    "vestacp",
    "cloudflare",
    "php",
    "interface",
    "control-panel",
    "php-interface",
    "admin-panel",
    "theme"
  ],
  "license": "GPL-3.0",
  "private": true,
  "ignore": [
    "node_modules",
    "bower_components"
  ],
  "dependencies": {
    "jquery-toast-plugin": "^1.3.2",
    "footable": "^3.1.6",
    "bootstrap-datepicker": "uxsolutions/bootstrap-datepicker#^1.8.0",
    "jquery": "2.2.4",
    "hotkeys": "jaywcjlove/hotkeys#^3.3.5",
    "phpmailer": "^6.0.5",
    "metismenu": "^2.7.9",
    "select2": "^4.0.5",
    "sweetalert2": "^7.26.11",
    "themify-icons": "^0.1.2",
    "font-awesome": "4.7.0",
    "mdi": "^2.6.95",
    "bootstrap": "3",
    "bootstrap-select": "^1.13.1",
    "animate.css": "^3.7.0",
    "popper.js": "^1.14.4",
    "moment": "^2.22.2",
    "jquery-slimscroll": "^1.3.8",
    "jquery-overlaps": "^1.2.3"
  },
  "install" : {
      "path"  : "plugins/components",
      "sources": {
            "themify-icons": "bower_components/themify-icons/fonts/**",
            "sweetalert2": [
                "bower_components/sweetalert2/dist/sweetalert2.min.css",
                "bower_components/sweetalert2/dist/sweetalert2.min.js"
            ],
            "select2": [
                "bower_components/select2/dist/css/select2.min.css",
                "bower_components/select2/dist/js/select2.min.js"
            ],
            "phpmailer": "bower_components/phpmailer/**",
            "moment": "bower_components/moment/min/moment.min.js",
            "metismenu": "bower_components/metismenu/dist/**",
            "mdi": {
                "mapping": [
                      {"bower_components/mdi/css/**": "css"},
                       {"bower_components/mdi/fonts/**": "fonts"}
                ]
            },
            "jquery-overlaps": "bower_components/jquery-overlaps/jquery.overlaps.js",
            "jquery": "bower_components/jquery/dist/**",
            "hotkeys": "bower_components/hotkeys/dist/hotkeys.min.js",
            "footable": "bower_components/footable/compiled/**",
            "font-awesome": "bower_components/font-awesome/fonts/**",
            "bootstrap-select": "bower_components/bootstrap-select/dist/**",
            "bootstrap-datepicker": [
                 "bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker3.standalone.min.css",
                 "bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"
            ],
            "bootstrap": "bower_components/bootstrap/dist/**",
            "animate.css": "bower_components/animate.css/animate.min.css"
        }
  }
}
